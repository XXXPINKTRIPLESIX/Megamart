<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="nav_product"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.megamart.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_category"
            app:destination="@id/nav_category" />
        <action
            android:id="@+id/action_nav_home_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.megamart.ui.cart.CartFragment"
        android:label="@string/menu_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/nav_catalog"
        android:name="com.example.megamart.ui.catalog.CatalogFragment"
        android:label="@string/menu_catalog"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_nav_catalog_to_nav_category"
            app:destination="@id/nav_category" />
    </fragment>
    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.megamart.ui.category.SubCategoryFragment"
        android:label="CategoryFragment">
        <action
            android:id="@+id/action_nav_category_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_nav_category_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.megamart.ui.product.ProductFragment"
        android:label="product_fragment"
        tools:layout="@layout/product_fragment" >
        <action
            android:id="@+id/action_productFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/brandFragment"
        android:name="com.example.megamart.ui.brand.BrandFragment"
        android:label="brand_fragment"
        tools:layout="@layout/brand_fragment" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.megamart.ui.product.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" />
</navigation>